<%= stylesheet_link_tag 'change' %>

<h1>Edit Clinic</h1>

<%= form_for @clinic, data: { turbo: false } do |f| %>
  <div>
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input-field inline", placeholder: "Clinic name" %><br>
  </div>

  <div>
    <%= f.label :email, class: "label" %>
    <%= f.text_field :email, class: "input-field inline", placeholder: "example@gmail.com" %><br>
  </div>
  
  <div>
    <%= f.label :phone, class: "label" %>
    <%= f.text_field :phone, class: "input-field inline", placeholder: "+3801234567" %><br>
  </div>
  
  <div>
    <%= f.label :address, class: "label" %>
    <%= f.text_field :address, class: "input-field inline", placeholder: "123 Adr st" %><br>
  </div>

  <div>
    <%= f.label :year_of_establishment, class: "label" %>
    <%= f.text_field :year_of_establishment, class: "input-field inline", placeholder: "1600-2023" %><br>
  </div>

  <div>
    <%= f.label :facility_type, class: "label" %>
    <%= f.text_field :facility_type, class: "input-field inline", placeholder: "Clinic type" %><br>
  </div>

  <div>
    <%= f.label :city, class: "label" %>
    <%= f.text_field :city, class: "input-field inline", placeholder: "c. Zubrowka" %><br>
  </div>

  <div>
    <%= f.label :rating_mortality, class: "label" %>
    <%= f.text_field :rating_mortality, class: "input-field inline", placeholder: "1-5" %><br>
  </div>

  <%= f.submit "Update", class: "button" %><br>

  <div id="error-message" class="large-label"></div>
<% end %>