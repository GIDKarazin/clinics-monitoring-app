<%= stylesheet_link_tag 'change' %>

<h1>New Specialty</h1>

<%= form_for @specialty do |f| %>
  <%= f.label :name, class: "label" %>
  <%= f.text_field :name, class: "input-field", placeholder: "Specialty name" %><br>

  <%= f.label :description, class: "label" %>
  <%= f.text_field :description, class: "input-field", placeholder: "Text" %><br>

  <%= f.submit "Create", class: "button" %>

  <div id="error-message" class="large-label"></div>
<% end %>