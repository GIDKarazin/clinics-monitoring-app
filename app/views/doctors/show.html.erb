<%= stylesheet_link_tag 'view' %>

<h1> Certain Doctor </h1>

<table>
  <tr>
    <td> ID: </td>
    <td> <%= @doctor.id %> </td>
  </tr>

  <tr>
    <td> Name: </td>
    <td> <%= @doctor.name %> </td>
  </tr>

  <tr>
    <td> Email: </td>
    <td> <%= @doctor.email %> </td>
  </tr>

  <tr>
    <td> Phone: </td>
    <td> <%= @doctor.phone %> </td>
  </tr>

  <tr>
    <td> Biography: </td>
    <td> <%= @doctor.biography %> </td>
  </tr>

  <tr>
    <td> Department ID: </td>
    <td> <%= @doctor.department_id %> </td>
  </tr>

  <tr>
    <td> Specialty ID: </td>
    <td> <%= @doctor.specialty_id %> </td>
  </tr>

</table>

<div class="links-container">
  <%= link_to 'Edit', edit_doctor_path(@doctor), class: "bottom-button" %>
  <%= link_to 'Back', doctors_path, class: "bottom-button" %>
</div>