<%= stylesheet_link_tag 'view' %>

<h1>All Doctors</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Biography</th>
      <th>Department ID</th>
      <th>Specialty ID</th>
      <th colspan="3">Data interraction</th>
    </tr>
  </thead>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.id %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.biography %></td>
        <td><%= doctor.department_id %></td>
        <td><%= doctor.specialty_id %></td>
        <td><%= link_to 'Show', doctor_path(doctor), class: "button" %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class: "button" %></td>
        <td><%= button_to 'Delete', doctor_path(doctor), method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="links-container">
  <%= link_to 'New Doctor', new_doctor_path, class: "bottom-button" %>
  <%= link_to 'Main page', '/', class: "bottom-button" %>
</div>