<%= stylesheet_link_tag 'change' %>

<h1>New Department</h1>

<%= form_for @department do |f| %>
  <%= f.label :name, class: "label" %>
  <%= f.text_field :name, class: "input-field", placeholder: "Department name" %><br>

  <%= f.label :description, class: "label" %>
  <%= f.text_field :description, class: "input-field", placeholder: "Text" %><br>

  <%= f.label :clinic_id, class: "label" %>
  <%= f.number_field :clinic_id, class: "input-field", placeholder: "Clinic ID" %><br>
  
  <%= f.submit "Create", class: "button" %>

  <div id="error-message" class="large-label"></div>
<% end %>