<%= stylesheet_link_tag 'change' %>

<h1>Edit Patient Card</h1>

<%= form_for @patientcard do |f| %> 
  <%= f.label :code, class: "label" %>
  <%= f.text_field :code, class: "input-field", placeholder: "AB1234" %><br>
  
  <%= f.label :description, class: "label" %>
  <%= f.text_field :description, class: "input-field", placeholder: "Text" %><br>

  <%= f.label :clinic_id, class: "label" %>
  <%= f.number_field :clinic_id, class: "input-field", placeholder: "Clinic ID" %><br>

  <%= f.label :patient_id, class: "label" %>
  <%= f.number_field :patient_id, class: "input-field", placeholder: "Patient ID" %><br>

  <%= f.label :doctor_id, class: "label" %>
  <%= f.number_field :doctor_id, class: "input-field", placeholder: "Doctor ID" %><br>

  <%= f.submit "Update", class: "button" %>

  <div id="error-message" class="large-label"></div>
<% end %>