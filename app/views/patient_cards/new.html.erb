<%= stylesheet_link_tag 'change' %>

<h1>New Patient Card</h1>

<%= form_for @patientcard do |f| %>
  <%= f.label :code, class: "label" %>
  <%= f.text_field :code, class: "input-field" %><br>

  <%= f.label :description, class: "label" %>
  <%= f.text_field :description, class: "input-field" %><br>

  <%= f.label :clinic_id, class: "label" %>
  <%= f.number_field :clinic_id, class: "input-field" %><br>

  <%= f.label :patient_id, class: "label" %>
  <%= f.number_field :patient_id, class: "input-field" %><br>

  <%= f.submit "Create", class: "button" %>

  <div id="error-message" class="large-label"></div>
<% end %>